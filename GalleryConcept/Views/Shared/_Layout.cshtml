@using System.Diagnostics
@using Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GalleryConcept</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GalleryConcept.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.typekit.net/tdv5xvw.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-2 px-4">
            <div class="container pt-4 border-bottom border-3 border-dark px-0">
                <a class="navbar-brand fs-5 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">co to za kolor</a>
                @* <ul class="navbar-nav"> *@
                @*     <li class="nav-item"> *@
                @*         <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                @*     </li> *@
                @*     <li class="nav-item"> *@
                @*         <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                @*     </li> *@
                @* </ul> *@
                @if (Context.Request.Path.Value.Contains("zwiedzanie") || Context.Request.Path.Value.Contains("print"))
                {
                    <a class="d-flex ms-auto p-0 me-0" tabindex="-1" role="button" aria-disabled="true" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/icons/arrow-left.svg" /></a>
                }
            </div>
        </nav>
    </header>
    <div class="container px-4">
        <main role="main" class="pb-3 px-0">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         &copy; 2022 - GalleryConcept - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
